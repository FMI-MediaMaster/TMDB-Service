{
  "packages": [
    "eslint_d@14.3.0",
    "bruno@2.12.0",
    "nodejs@24.10.0"
  ],
  "env": {
    "DEVBOX_COREPACK_ENABLED": "true"
  },
  "shell": {
    "init_hook": [
      "pnpm install"
    ],
    "scripts": {
      "bruno": "nohup bruno >/dev/null 2>&1 &",
      "docker:build": "docker build -t tmdb-service .",
      "docker:run": "docker run -d --rm --env-file .env -p 8010:8010 --name tmdb-service tmdb-service",
      "docker:stop": "docker stop tmdb-service",
    }
  }
}
